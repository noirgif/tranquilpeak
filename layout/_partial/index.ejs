<section class="postShorten-group main-content-wrap">
    <% page.posts.each(function(post) { %>
    <%
        var tableOfContents = null;
        var thumbnailImageUrl = post.thumbnailImageUrl;
        var postContent = post.content;
        // Define default position for the thumbnail image
        var thumbnailImagePosition = theme.thumbnail_image_position;
        /* Define thumbnail image */

        // Check if this is a photo-diary layout post
        var isPhotoDiary = post.layout === 'photo-diary';
        var photoDiaryEntries = [];
        
        if (isPhotoDiary) {
            // Parse entries from content using <!-- entry --> markers
            var entryRegex = /<!--\s*entry\s*-->([\s\S]*?)<!--\s*\/entry\s*-->/gi;
            var match;
            
            while ((match = entryRegex.exec(postContent)) !== null) {
                var entryContent = match[1];
                var photos = [];
                var caption = '';
                
                // Extract images - HTML img tags (content is already rendered)
                var imgHtmlRegex = /<img[^>]+src=["']([^"']+)["'][^>]*>/gi;
                var imgMatch;
                while ((imgMatch = imgHtmlRegex.exec(entryContent)) !== null) {
                    photos.push(imgMatch[1]);
                }
                
                // Extract caption
                caption = entryContent
                    .replace(/<img[^>]*>/gi, '')
                    .replace(/<p[^>]*>|<\/p>/gi, '')
                    .replace(/<[^>]*>/g, '')
                    .replace(/\n+/g, ' ')
                    .trim()
                    .substring(0, 150);
                
                if (photos.length > 0) {
                    photoDiaryEntries.push({ photos: photos, caption: caption });
                }
            }
        }

        // Define position of the thumbnail image
        if (!post.excerpt && !post.link) {
            thumbnailImagePosition = "bottom";
        } else if (thumbnailImageUrl !== null) {
            if (post.thumbnailImagePosition && post.thumbnailImagePosition.length)  {
                thumbnailImagePosition = post.thumbnailImagePosition;
            }
        }

        // Generate and insert table of contents in post content
        if (!post.excerpt && (/<!--(\s*)[t|T][o|O][c|C](\s*)-->/).test(postContent)) {
            if (__('post.toc_title')) {
                tableOfContents = '<h1 id=\"table-of-contents\">' + __('post.toc') + '</h1>';
            } else {
                tableOfContents = '<span id="table-of-contents"></span>';
            }
            tableOfContents += toc(postContent, {list_number: false})
            postContent = postContent.replace(/<!--(\s*)[t|T][o|O][c|C](\s*)-->/, tableOfContents)
        }
    %>
    <article class="postShorten postShorten--thumbnailimg-<%= thumbnailImagePosition %>">
        <div class="postShorten-wrap">
            <% if (thumbnailImageUrl !== null && thumbnailImagePosition === "top") { %>
                <a
                    href="<%- url_for(post.path) %>"
                    aria-label="<% __('global.open_post') %>: <%= post.title %>"
                >
                    <div class="postShorten-thumbnailimg">
                        <img alt="" src="<%= thumbnailImageUrl %>"/>
                    </div>
                </a>
                <% thumbnailImageUrl = null; %>
            <% } %>
            <div class="postShorten-header">
                <h1 class="postShorten-title">
                    <% if (post.link) { %>
                        <a
                            class="link-unstyled"
                            href="<%- url_for(post.link) %>"
                            aria-label="<% __('global.open_post') %>: <%= post.title %>"
                        >
                            <%= post.title || '(' + __('post.no_title') + ')' %>
                        </a>
                    <% } else { %>
                        <a
                            class="link-unstyled"
                            href="<%- url_for(post.path) %>"
                            aria-label="<% __('global.open_post') %>: <%= post.title %>"
                        >
                            <%= post.title || '(' + __('post.no_title') + ')' %>
                        </a>
                    <% } %>
                </h1>
                <%- partial('post/meta', {post: post, classes: ['postShorten-meta']}) %>
            </div>
            <% if (post.excerpt || post.link) { %>
                <div class="postShorten-excerpt">
                    <%- post.excerpt %>
                    <% if (post.link && _('post.go_to_website')) { %>
                        <a
                            href="<%- url_for(post.link) %>"
                            target="new"
                            class="postShorten-excerpt_link link"
                            aria-label="<% __('global.open_link') %>: <%= post.title %>"
                        >
                            <%= __('post.go_to_website') %>
                        </a>
                    <% } else if (__('post.read_more')) { %>
                        <a
                            href="<%- url_for(post.path) %>"
                            class="postShorten-excerpt_link link"
                            aria-label="<% __('global.open_post') %>: <%= post.title %>"
                        >
                            <%- __('post.read_more') %>
                        </a>
                        <% if (post.readingtime) { %>
                            <span class="postShorten-readingtime">
                                <%= ' - ' + post.readingtime + ' min read' %>
                            </span>
                        <% } %>
                    <% } %>
                </div>
            <% } else if (isPhotoDiary && photoDiaryEntries.length > 0) { %>
                <div class="postShorten-content photo-diary-preview">
                    <a href="<%- url_for(post.path) %>" class="photo-diary-preview-link">
                        <div class="photo-diary-preview-grid photos-<%= Math.min(photoDiaryEntries.length, 4) %>">
                            <% photoDiaryEntries.slice(0, 4).forEach(function(entry, idx) { %>
                                <div class="photo-diary-preview-item">
                                    <img src="<%- entry.photos[0] %>" alt="" loading="lazy" />
                                    <% if (idx === 3 && photoDiaryEntries.length > 4) { %>
                                        <div class="photo-diary-preview-more">+<%= photoDiaryEntries.length - 4 %></div>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                        <% if (photoDiaryEntries[0].caption) { %>
                            <p class="photo-diary-preview-caption"><%= photoDiaryEntries[0].caption %></p>
                        <% } %>
                    </a>
                    <p>
                        <a
                            href="<%- url_for(post.path) %>"
                            class="postShorten-excerpt_link link"
                            aria-label="<% __('global.open_post') %>: <%= post.title %>"
                        >
                            View <%= photoDiaryEntries.length %> photos â†’
                        </a>
                    </p>
                </div>
            <% } else { %>
                <div class="postShorten-content">
                    <%- postContent %>
                    <% if (theme.image_gallery) { %>
                        <%- partial('post/gallery', {photos: post.photos, post: post})%>
                    <% } %>
                    <% if (__('post.comment_and_share')) { %>
                        <p>
                            <a
                                href="<%- url_for(post.path + '#post-footer') %>"
                                class="postShorten-excerpt_link link"
                                aria-label="<% __('post.comment_and_share') %>"
                            >
                                <%- __('post.comment_and_share') %>
                            </a>
                        </p>
                    <% } %>
                </div>
            <% } %>
        </div>
        <% if (thumbnailImageUrl !== null && thumbnailImagePosition !== "top") { %>
            <a
                href="<%- url_for(post.path) %>"
                aria-label="<% __('global.open_post') %>: <%= post.title %>"
            >
                <div class="postShorten-thumbnailimg">
                    <img alt="" src="<%= thumbnailImageUrl %>"/>
                </div>
            </a>
            <% thumbnailImageUrl = null; %>
        <% } %>
    </article>
    <% }) %>
    <%- partial('pagination', {type: 'page'}) %>
</section>
